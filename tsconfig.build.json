// tsconfig.build.json
{
  "extends": "./tsconfig.json",
  "include": ["src/index.ts"],
  "exclude": ["**/__tests__/**", "dist", "docs"],
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist/types",
    "composite": false,
    "noEmit": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  }
}
